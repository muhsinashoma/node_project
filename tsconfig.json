{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "server.ts",
        "database.ts",
        "routes/**/*.ts",
        "controllers/**/*.ts"
    ]
}